<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  tools:context="com.coorchice.supertextview.SecondActivity">

  <com.coorchice.library.SuperTextView
    android:id="@+id/btn"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:text="按压变色"
    android:paddingBottom="5dp"
    android:gravity="bottom|center_horizontal"
    android:textColor="@color/black"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    app:corner="10dp"
    app:solid="@color/opacity_5_red"
    app:isShowState="true"
    app:state_drawable="@drawable/emoji_kiss"
    app:state_drawable_mode="center"
    app:state_drawable_width="50dp"
    app:state_drawable_height="50dp"
    app:pressBgColor="@color/red"
    app:pressTextColor="@color/white"
    />

  <com.coorchice.library.SuperTextView
    android:id="@+id/stv_3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stv_small_size"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="圆角图片背景"
    android:textColor="@color/white"
    android:textSize="16dp"
    android:layout_below="@+id/btn"
    app:corner="25dp"
    app:solid="@color/purple"
    app:drawableAsBackground="true"
    app:state_drawable="@drawable/amazing"
    />

  <com.coorchice.library.SuperTextView
    android:id="@+id/btn_2"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_below="@+id/stv_3"
    android:text="Homie"
    android:paddingBottom="5dp"
    android:gravity="bottom|center_horizontal"
    android:textColor="@color/black"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    app:corner="50dp"
    app:solid="@color/white"
    app:stroke_color="#F4E187"
    app:stroke_width="4dp"
    app:isShowState="true"
    app:state_drawable="@drawable/amazing"
    app:state_drawable_mode="left"
    app:state_drawable_width="50dp"
    app:state_drawable_height="50dp"
    app:state_drawable_padding_top="-5dp"
    app:drawableAsBackground="true"
    app:isShowState2="true"
    app:state_drawable2="@drawable/recousers"
    app:state_drawable2_mode="rightTop"
    app:state_drawable2_height="20dp"
    app:state_drawable2_width="20dp"
    app:pressBgColor="@color/black"
    app:pressTextColor="@color/white"
    />

</RelativeLayout>
