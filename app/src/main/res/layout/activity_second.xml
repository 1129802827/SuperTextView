<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAF4FF"
    tools:context="com.coorchice.supertextview.SecondActivity">

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:text="按压变色"
      android:paddingBottom="5dp"
      android:gravity="bottom|center_horizontal"
      android:textColor="@color/black"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      app:stv_corner="10dp"
      app:stv_solid="@color/opacity_5_red"
      app:stv_isShowState="true"
      app:stv_state_drawable="@drawable/emoji_kiss"
      app:stv_state_drawable_mode="center"
      app:stv_state_drawable_width="50dp"
      app:stv_state_drawable_height="50dp"
      app:stv_pressBgColor="@color/red"
      app:stv_pressTextColor="@color/white"
      android:visibility="gone"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn_2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:text="圆角图"
      android:textSize="12sp"
      android:paddingBottom="5dp"
      android:gravity="bottom|center_horizontal"
      android:textColor="@color/white"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="10dp"
      app:stv_corner="15dp"
      app:stv_solid="@color/black"
      app:stv_state_drawable="@drawable/avatar1"
      app:stv_drawableAsBackground="true"
      app:stv_pressBgColor="@color/black"
      app:stv_pressTextColor="@color/white"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn_3"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignTop="@+id/btn_2"
      android:layout_centerHorizontal="true"
      android:text="图片+边框"
      android:paddingBottom="5dp"
      android:gravity="bottom|center_horizontal"
      android:textColor="@color/pink"
      android:layout_marginLeft="20dp"
      app:stv_corner="10dp"
      app:stv_stroke_color="@color/pink"
      app:stv_stroke_width="4dp"
      app:stv_isShowState="true"
      app:stv_state_drawable="@drawable/avatar3"
      app:stv_drawableAsBackground="true"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn_4"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="10dp"
      android:layout_alignTop="@+id/btn_2"
      android:text="圆形图片"
      android:paddingBottom="5dp"
      android:gravity="bottom|center_horizontal"
      android:textColor="@color/white"
      android:layout_marginLeft="20dp"
      app:stv_corner="50dp"
      app:stv_solid="@color/white"
      app:stv_stroke_color="#F4E187"
      app:stv_stroke_width="4dp"
      app:stv_isShowState="true"
      app:stv_state_drawable="@drawable/avatar4"
      app:stv_drawableAsBackground="true"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/stv_1"
      android:layout_width="match_parent"
      android:layout_height="@dimen/stv_small_size"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="半圆角图"
      android:textColor="@color/pink"
      android:textStyle="bold"
      android:textSize="16dp"
      android:layout_below="@+id/btn_2"
      app:stv_corner="25dp"
      app:stv_solid="@color/purple"
      app:stv_drawableAsBackground="true"
      app:stv_state_drawable="@drawable/bige2"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn_5"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginTop="20dp"
      android:layout_below="@+id/stv_1"
      android:text="Drawable2"
      android:paddingBottom="5dp"
      android:layout_alignParentRight="true"
      android:gravity="bottom|center_horizontal"
      android:textColor="@color/black"
      android:layout_marginRight="55dp"
      android:background="@drawable/avatar7"
      app:stv_isShowState="true"
      app:stv_state_drawable="@drawable/triangle"
      app:stv_state_drawable_mode="leftTop"
      app:stv_state_drawable_width="20dp"
      app:stv_state_drawable_height="20dp"
      app:stv_isShowState2="true"
      app:stv_state_drawable2="@drawable/recousers"
      app:stv_state_drawable2_mode="rightTop"
      app:stv_state_drawable2_height="20dp"
      app:stv_state_drawable2_width="20dp"
      app:stv_pressTextColor="@color/white"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/btn_6"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginTop="20dp"
      android:layout_below="@+id/stv_1"
      android:text="Drawable2"
      android:paddingBottom="5dp"
      android:gravity="bottom|center_horizontal"
      android:textColor="#ED86AE"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="55dp"
      app:stv_corner="50dp"
      app:stv_solid="@color/white"
      app:stv_state_drawable="@drawable/avatar6"
      app:stv_drawableAsBackground="true"
      app:stv_isShowState2="true"
      app:stv_state_drawable2="@drawable/recousers"
      app:stv_state_drawable2_mode="rightTop"
      app:stv_state_drawable2_height="20dp"
      app:stv_state_drawable2_width="20dp"
      app:stv_pressBgColor="@color/black"
      app:stv_pressTextColor="@color/white"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/stv_2"
      android:layout_width="match_parent"
      android:layout_height="@dimen/stv_small_size"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="多个Adjuster演示"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="16dp"
      android:layout_below="@+id/btn_5"
      app:stv_corner="25dp"
      app:stv_solid="@color/white"
      app:stv_drawableAsBackground="true"
      app:stv_state_drawable="@drawable/bige3"
      />


    <com.coorchice.library.SuperTextView
      android:id="@+id/stv_3"
      android:layout_width="match_parent"
      android:layout_height="@dimen/stv_small_size"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="20dp"
      android:gravity="center"
      android:text="Next"
      android:textColor="@color/blue"
      android:textStyle="bold"
      android:textSize="18sp"
      android:layout_below="@+id/stv_2"
      app:stv_corner="25dp"
      app:stv_solid="@color/white"
      app:stv_stroke_color="@color/pink"
      app:stv_stroke_width="3dp"
      app:stv_drawableAsBackground="true"
      app:stv_state_drawable="@drawable/bige1"
      />

    <com.coorchice.library.SuperTextView
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:layout_below="@+id/stv_3"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:layout_marginTop="20dp"
      app:stv_state_drawable="@drawable/revanger_4"
      app:stv_drawableAsBackground="true"
      />
  </RelativeLayout>
</ScrollView>
