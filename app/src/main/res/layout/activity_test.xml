        app:stv_isShowState="true"
        app:stv_state_drawable="@color/blue"
        app:stv_state_drawable_width="5000dp"
        app:stv_state_drawable_height="1dp"
        app:stv_state_drawable_mode="center"
        />

</RelativeLayout>